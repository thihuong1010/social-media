<div class="container">
    {{#each posts}}
    <div class="media">
        <img class="mr-3 post-user-pic" src="{{user.image}}"/>
        <div class="media-body">
            <h3 class="mt-0">{{user.fullname}}</h3>
            <h4>{{title}} <small class="blue"><i class="fa fa-globe"></i></small></h4>
            <p>{{body}}</p>
            <small>{{date}}</small>
            {{#if allowComments}}
            {{#each comments}}
            <div class="media mt-3">
                <a class="pr-3" href="#">
                    <img src="{{commentUser.image}}" alt="Generic placeholder image">
                </a>
                <div class="media-body">
                    <h5 class="mt-0">{{commentUser.fullname}}</h5>
                    <p>{{commentBody}}</p>
                    <small>{{commentDate}}</small>
                </div>
            </div>
            {{/each}}
            <br>
            <form action="/addComment/{{_id}}" method="POST" class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="commentBody" class="form-control" placeholder="Comments...">
                </div>
                <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-comment"></i></button>
            </form>
            {{else}}
            <p class="red">Comment is not available for this post</p>
            {{/if}}
        </div>
    </div>
    <hr>
    {{else}}
    <p>No posts found...</p>
    {{/each}}
</div>