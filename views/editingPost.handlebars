<div class="container">
    <h1>Edit post</h1>
    <form action="/editingPost/{{post._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="{{post.title}}"
            placeholder="Add title">
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            <textarea type="text" class="form-control" name="body" 
            placeholder="What is in your mind?">{{post.body}}</textarea>
        </div>
        <div class="form-group">
            <label for="status">Privacy</label>
            <select name="status">
                <option value="public">Public</option>
                <option value="private">Private</option>
            </select>
        </div>
        <div class="form-check">
            <input type="checkbox" name="allowComment" class="form-check-input" id="checkbox">
            <label class="form-check-label" for="checkbox">Allow comment</label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>